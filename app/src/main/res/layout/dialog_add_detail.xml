<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/add_student_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_student_name_text"
        android:layout_alignBottom="@+id/add_student_name_text"
        android:layout_alignStart="@+id/add_student_id_input"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/add_student_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_student_id_input"
        android:layout_alignBottom="@+id/add_student_id_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_weight="2"
        android:text="學號：" />

    <EditText
        android:id="@+id/add_student_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/add_student_id_text"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/add_student_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_student_id_text"
        android:layout_below="@+id/add_student_id_input"
        android:layout_marginTop="23dp"
        android:text="姓名：" />

</RelativeLayout>
